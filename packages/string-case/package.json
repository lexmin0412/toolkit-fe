		"ts": "ts-node src/",
		"prepublishOnly": "npm run build"
	},
	"keywords": [],
	"author": "lexmin0412 <zhangle_dev@outlook.com>",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^20.10.0",
		"rimraf": "^5.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^5.3.2"
	},
	"files": [
		"es",
		"lib"
	],
	"types": "./lib/index.d.ts",
	"jsnext:main": "./es/index.js",
	"module": "./es/index.js"
}
